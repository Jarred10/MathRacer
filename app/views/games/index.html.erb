<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Gameid</th>
      <th>User1</th>
      <th>User1progress</th>
      <th>User2</th>
      <th>User2progress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.gameid %></td>
        <td><%= game.user1 %></td>
        <td><%= game.user1progress %></td>
        <td><%= game.user2 %></td>
        <td><%= game.user2progress %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
